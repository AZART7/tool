    <!-- Conversion Result Modal -->
    <div class="modal" id="conversionModal">
        <div class="modal-content">
            <button class="close-modal" id="closeModal">
                <i class="fas fa-times"></i>
            </button>
            <div class="modal-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h3>Conversion Complete!</h3>
            <p>Your PDF file has been successfully converted to Word document.</p>
            <a href="#" class="download-btn" id="downloadBtn" download>
                <i class="fas fa-download"></i>
                Download Now
            </a>
        </div>
    </div>
    
    <script>
        // Mobile Menu Toggle
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mainNav = document.getElementById('mainNav');
        
        mobileMenuBtn.addEventListener('click', () => {
            mainNav.classList.toggle('active');
        });
        
        // Format Selection
        const formatOptions = document.querySelectorAll('.format-option');
        const convertBtnText = document.querySelector('#convertBtn span');
        
        formatOptions.forEach(option => {
            option.addEventListener('click', () => {
                formatOptions.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
                
                const format = option.dataset.format;
                let formatName = '';
                
                switch(format) {
                    case 'word':
                        formatName = 'Word';
                        break;
                    case 'excel':
                        formatName = 'Excel';
                        break;
                    case 'powerpoint':
                        formatName = 'PowerPoint';
                        break;
                }
                
                convertBtnText.textContent = `Convert to ${formatName}`;
            });
        });
        
        // File Upload Handling
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const fileInfo = document.getElementById('fileInfo');
        const fileName = document.getElementById('fileName');
        const fileSize = document.getElementById('fileSize');
        const removeFile = document.getElementById('removeFile');
        const convertBtn = document.getElementById('convertBtn');
        
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });
        
        // Drag and drop functionality
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#4285f4';
            uploadArea.style.backgroundColor = 'rgba(66, 133, 244, 0.05)';
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.style.borderColor = '#dadce0';
            uploadArea.style.backgroundColor = 'transparent';
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.style.borderColor = '#dadce0';
            uploadArea.style.backgroundColor = 'transparent';
            
            if (e.dataTransfer.files.length) {
                handleFileSelection(e.dataTransfer.files[0]);
            }
        });
        
        fileInput.addEventListener('change', () => {
            if (fileInput.files.length) {
                handleFileSelection(fileInput.files[0]);
            }
        });
        
        function handleFileSelection(file) {
            // Check if file is PDF
            if (!file.type.includes('pdf')) {
                alert('Please select a PDF file.');
                return;
            }
            
            // Check file size (limit to 50MB)
            if (file.size > 50 * 1024 * 1024) {
                alert('File size exceeds 50MB limit. Please choose a smaller file.');
                return;
            }
            
            // Display file info
            fileName.textContent = file.name;
            fileSize.textContent = formatFileSize(file.size);
            fileInfo.classList.add('show');
            convertBtn.disabled = false;
        }
        
        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
        
        removeFile.addEventListener('click', () => {
            fileInput.value = '';
            fileInfo.classList.remove('show');
            convertBtn.disabled = true;
        });
        
        // Conversion Simulation
        const convertBtn = document.getElementById('convertBtn');
        const loader = document.getElementById('loader');
        const conversionModal = document.getElementById('conversionModal');
        const closeModal = document.getElementById('closeModal');
        const downloadBtn = document.getElementById('downloadBtn');
        
        convertBtn.addEventListener('click', () => {
            // Show loading state
            convertBtn.disabled = true;
            loader.style.display = 'block';
            convertBtn.querySelector('span').style.visibility = 'hidden';
            
            // Simulate conversion process (3 seconds)
            setTimeout(() => {
                loader.style.display = 'none';
                convertBtn.querySelector('span').style.visibility = 'visible';
                
                // Show success modal
                conversionModal.style.display = 'flex';
                
                // Set download filename
                const originalFilename = fileName.textContent.replace('.pdf', '');
                const activeFormat = document.querySelector('.format-option.active').dataset.format;
                let extension = '';
                
                switch(activeFormat) {
                    case 'word':
                        extension = '.docx';
                        break;
                    case 'excel':
                        extension = '.xlsx';
                        break;
                    case 'powerpoint':
                        extension = '.pptx';
                        break;
                }
                
                downloadBtn.setAttribute('download', `${originalFilename}_converted${extension}`);
                
                // Update modal text based on format
                const modalText = conversionModal.querySelector('p');
                modalText.textContent = `Your PDF file has been successfully converted to ${activeFormat.charAt(0).toUpperCase() + activeFormat.slice(1)} document.`;
            }, 3000);
        });
        
        closeModal.addEventListener('click', () => {
            conversionModal.style.display = 'none';
            convertBtn.disabled = false;
        });
        
        // Close modal when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === conversionModal) {
                conversionModal.style.display = 'none';
                convertBtn.disabled = false;
            }
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    mainNav.classList.remove('active');
                }
            });
        });
    </script>
</body>
</html>
